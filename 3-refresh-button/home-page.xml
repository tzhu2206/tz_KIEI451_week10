<Page loaded="pageLoaded" xmlns="http://www.nativescript.org/tns.xsd">

    <!-- ⬇️ ⬇️ ⬇️ YOUR CODE BEGINS HERE ⬇️ ⬇️ ⬇️ -->

    <ActionBar title="Kelloggram"></ActionBar>

    <StackLayout>
        <Button id="refreshPosts" text="Refresh Posts" />
        <ListView items="{{ posts }}" class="h-full">
            <ListView.itemTemplate>
                <StackLayout>
                    <Label text="{{ username }}" class="text-3xl" />
                    <Image src="{{ imageUrl }}" width="400" height="400" />
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
    <!-- ⬆️ ⬆️ ⬆️ YOUR CODE ENDS HERE ⬆️ ⬆️ ⬆️ -->
</Page>